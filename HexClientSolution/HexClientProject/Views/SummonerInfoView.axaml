<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:HexClientProject.ViewModels"
             x:Class="HexClientProject.Views.SummonerInfoView">
    <UserControl.DataContext>
        <viewModels:SummonerInfoViewModel/>
    </UserControl.DataContext>
    <Grid Background="Black">
        <!-- Left Panel -->
        <Border Background="Gray" Width="10" HorizontalAlignment="Left"/>
        
        <!-- Circle -->
        <Ellipse Width="50" Height="50" Fill="LightGray"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        
        <!-- Rectangle -->
        <Rectangle Width="80" Height="30" Fill="LightGray"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>
    </Grid>
</UserControl>