<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HexClientProject.ViewModels"
             xmlns:gameModeSelectionPhase="clr-namespace:HexClientProject.ViewModels.GameModeSelectionPhase"
             x:Class="HexClientProject.Views.GameModeSelectionView"
             x:DataType="gameModeSelectionPhase:GameModeSelectionViewModel">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Gamemode selection:" FontSize="16" Margin="10"/>
        <Button x:Name="Qp" Content="Quickplay" Command="{Binding SwitchToLobby}" CommandParameter="{Binding Name, ElementName=Qp}"/>
        <Button x:Name="Sd" Content="Ranked solo/duo" Command="{Binding SwitchToLobby}" CommandParameter="{Binding Name, ElementName=Sd}"/>
        <Button x:Name="F" Content="Ranked flex" Command="{Binding SwitchToLobby}" CommandParameter="{Binding Name, ElementName=F}"/>
    </StackPanel>
</UserControl>