<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:HexClientProject.ViewModels"
             xmlns:sideBar="clr-namespace:HexClientProject.ViewModels.SideBar"
             x:Class="HexClientProject.Views.SummonerInfoView"
             x:DataType="sideBar:SummonerInfoViewModel">
    <UserControl.DataContext>
        <sideBar:SummonerInfoViewModel/>
    </UserControl.DataContext>
    <Grid Background="Black">
        <!-- Circle -->
        <Ellipse Width="50" Height="50" Fill="LightGray"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        
        <!-- Rectangle -->
        <Rectangle Width="120" Height="30" Fill="Gray"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>
        <TextBlock Text="{Binding SummonerName}"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" />
            
    </Grid>
</UserControl>