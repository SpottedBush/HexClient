<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sideBar="clr-namespace:HexClientProject.Views.SideBar"
             xmlns:rune="clr-namespace:HexClientProject.Views.Rune"
             xmlns:draftPhase="clr-namespace:HexClientProject.ViewModels.DraftPhase"
             x:Class="HexClientProject.Views.DraftPhase.DraftView"
             x:DataType="draftPhase:DraftViewModel">

  <!-- Root grid for layering -->
  <Grid>
    <!-- Layer 0: Main layout -->
    <Grid ColumnDefinitions="2*,6*,2*" RowDefinitions="Auto,Auto,*,Auto">
    <!-- Top Info Bar -->
    <TextBlock Grid.ColumnSpan="3"
               Text="{Binding GameModeName}"
               FontSize="20"
               HorizontalAlignment="Center"
               Margin="0,10"/>

    <!-- Left Team Info -->
    <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="10" VerticalAlignment="Top">
      <ItemsControl>
        <ItemsControl.Items>
          <StackPanel Margin="0,5" Orientation="Horizontal" Spacing="10">
            <Ellipse Width="40" Height="40" Fill="Gray"/>
            <StackPanel>
              <TextBlock Text="Lane :" />
              <TextBlock Text="Banned :" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" Margin="10,0,0,0">
              <Rectangle Width="20" Height="20" Fill="Gray"/>
              <Rectangle Width="20" Height="20" Fill="Gray"/>
            </StackPanel>
          </StackPanel>
          <!-- Repeat 5 times manually or via data-binding -->
        </ItemsControl.Items>
      </ItemsControl>
    </StackPanel>

    <!-- Champion Filters -->
    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Spacing="5" Margin="0,5">
      <ComboBox Width="100"/>
      <Button Content="+ bannis" Width="80"/>
      <Button Content="+ pris" Width="80"/>
      <TextBox Width="200" Watermark="Chercher"/>
    </StackPanel>

    <!-- Champion Selection Grid -->
    <Border Grid.Column="1" Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1">
      <UniformGrid Columns="6" Rows="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Rectangle Fill="LightGray" Margin="5"/>
        <!-- Add more rectangle placeholders or data-bind champions -->
      </UniformGrid>
    </Border>

    <!-- Right Team Info -->
    <StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Margin="10" VerticalAlignment="Top">
      <ItemsControl>
        <ItemsControl.Items>
          <StackPanel Margin="0,5" Orientation="Horizontal" Spacing="10">
            <Ellipse Width="40" Height="40" Fill="Gray"/>
            <StackPanel>
              <TextBlock Text="Lane :" />
              <TextBlock Text="Banned :" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" Margin="10,0,0,0">
              <Rectangle Width="20" Height="20" Fill="Gray"/>
              <Rectangle Width="20" Height="20" Fill="Gray"/>
            </StackPanel>
          </StackPanel>
          <!-- Repeat 5 times manually or via data-binding -->
        </ItemsControl.Items>
      </ItemsControl>
    </StackPanel>

    <!-- Right Middle: Skins + Wards -->
    <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,5">
      <TextBlock Text="Skins" FontWeight="Bold" Margin="5"/>
      <StackPanel>
        <Rectangle Fill="Gray" Height="30" Margin="5"/>
        <Rectangle Fill="Gray" Height="30" Margin="5"/>
        <Rectangle Fill="Gray" Height="30" Margin="5"/>
      </StackPanel>
      <TextBlock Text="Wards" FontWeight="Bold" Margin="5"/>
      <Rectangle Fill="Gray" Height="30" Margin="5"/>
    </StackPanel>

    <!-- Bottom Panel: Spells, Runes, Timer, Chat -->
    <Grid Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="3" ColumnDefinitions="2*,3*,3*,3*" Margin="10,5">

      <!-- Spells and Runes -->
      <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
        <!-- Spells -->
        <StackPanel>
          <TextBlock Text="Sorts" FontWeight="Bold"/>
          <Rectangle Width="40" Height="40" Fill="Gray" Margin="5"/>
          <Rectangle Width="40" Height="40" Fill="Gray" Margin="5"/>
        </StackPanel>
        <!-- Runes -->
        <rune:RuneOverviewView VerticalAlignment="Center" HorizontalAlignment="Center" DataContext="{Binding RuneOverviewViewModel}"/>
      </StackPanel>

      <!-- Timer -->
      <StackPanel Grid.Column="1" HorizontalAlignment="Center">
        <TextBlock Text="{Binding DisplayTimer}" Margin="5"/>
        <ProgressBar Width="150" Height="20" Value="{Binding TimeLeft}" Minimum="0" Maximum="100"/>
      </StackPanel>

      <!-- Confirm Button -->
      <StackPanel Grid.Column="2" HorizontalAlignment="Center">
        <Button Content="Lock In" Width="150" Height="50"/>
      </StackPanel>

      <!-- Chatbox -->
      <sideBar:ChatBoxView Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
  </Grid>
    
    <!-- Overlay editor -->
    <Border IsVisible="{Binding IsEditorVisible}" Background="#80000000">
      <Grid ColumnDefinitions="1.5*,7*,1.5*" RowDefinitions="1*,8*,1*">
        <Border Grid.Column="1" Grid.Row="1" Background="White" CornerRadius="12" Padding="20">
          <rune:RuneEditorView DataContext="{Binding RuneEditorViewModel}" />
        </Border>
      </Grid>
    </Border>
  </Grid>
</UserControl>
