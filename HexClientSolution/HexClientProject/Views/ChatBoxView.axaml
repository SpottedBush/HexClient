<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:HexClientProject.ViewModels"
             x:Class="HexClientProject.Views.ChatBoxView"
             x:DataType="viewModels:ChatBoxViewModel">
    
    <UserControl.DataContext>
        <viewModels:ChatBoxViewModel/>
    </UserControl.DataContext>

    <StackPanel Margin="10">

        <!-- Scope Selector -->
        <ComboBox ItemsSource="{Binding Scopes}"
                  SelectedItem="{Binding SelectedScope}"
                  Margin="0 0 0 5"/>

        <!-- Messages List -->
        <ListBox ItemsSource="{Binding Messages}" Height="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Content}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Input + Send -->
        <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
            <TextBox Width="200" Text="{Binding MessageInput}" />
            <Button Content="Send" Command="{Binding SendMessageCommand}" Margin="5 0 0 0"/>
        </StackPanel>

    </StackPanel>
</UserControl>