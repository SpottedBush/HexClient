<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rune="clr-namespace:HexClientProject.ViewModels.Rune"
             x:Class="HexClientProject.Views.Rune.RunePagesView"
             x:DataType="rune:RunePagesViewModel">
    <StackPanel Margin="10">
        <!-- New Rune Page Button -->
        <Button Content="New Rune Page" Command="{Binding AddNewPageCommand}" />
        
        <!-- Save All Rune Pages Button -->
        <Button Content="Save All Pages" Command="{Binding SaveAllCommand}" />

        <!-- Delete Rune Page Button -->
        <Button Content="Delete"
                Command="{Binding DeletePageCommand}"
                CommandParameter="{Binding}" />
        
        <!-- List of Rune Pages -->
        <ItemsControl ItemsSource="{Binding RunePages}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PageName}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </StackPanel>
</UserControl>