<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HexClientProject.ViewModels.RuneSystem"
             xmlns:d="https://github.com/avaloniaui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="HexClientProject.Views.Rune.RuneOverviewView"
             x:DataType="vm:RuneOverviewViewModel"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DesignHeight="200">
    
    <Border BorderBrush="White" BorderThickness="1" Padding="10">
        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
            
            <!-- Summoner Spells -->
            <StackPanel Grid.Column="0" Spacing="10">
                <Rectangle Width="40" Height="40" Fill="Gray"/>
                <Rectangle Width="40" Height="40" Fill="Gray"/>
            </StackPanel>

            <!-- Rune Display -->
            <StackPanel Grid.Column="1" Margin="20,0" Spacing="10" DataContext="{Binding DisplayPage}">
                <TextBlock Text="Runes" FontWeight="Bold"/>

                <!-- Keystone -->
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="{Binding Keystone.Icon}" Width="40" Height="40"/>
                </StackPanel>

                <!-- Primary Runes -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <ItemsControl Items="{Binding PrimaryRunes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}" Width="32" Height="32"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Secondary Runes -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <ItemsControl Items="{Binding SecondaryRunes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Icon}" Width="32" Height="32"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>

            <!-- Stat Perks -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" Spacing="10" DataContext="{Binding DisplayPage}">
                <ItemsControl Items="{Binding StatMods}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Icon}" Width="28" Height="28"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
