<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rune="clr-namespace:HexClientProject.ViewModels.Rune"
             x:Class="HexClientProject.Views.Rune.RuneOptionView"
             x:DataType="rune:RuneOptionViewModel">
    <ToggleButton IsChecked="{Binding IsSelected}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Image Source="{Binding IconPath}" Width="40" Height="40"/>
            <TextBlock Text="{Binding Name}" FontSize="12" TextAlignment="Center"/>
        </StackPanel>
    </ToggleButton>
</UserControl>