<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:runeSystem="clr-namespace:HexClientProject.Models.RuneSystem"
             xmlns:rune="clr-namespace:HexClientProject.Views.Rune"
             x:Class="HexClientProject.Views.Rune.RunePageView"
             x:DataType="runeSystem:RunePageModel">
    <StackPanel Spacing="8" Margin="10">
        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
        <TextBlock Text="Primary Tree:"/>
        <ItemsControl Items="{Binding PrimaryTree.Slots}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <rune:RuneSlotView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Text="Secondary Tree:"/>
        <ItemsControl Items="{Binding SecondaryTree.Slots}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <rune:RuneSlotView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>