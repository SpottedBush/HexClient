<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HexClientProject.ViewModels.RuneSystem.RuneEditor"
             xmlns:converters="clr-namespace:HexClientProject.Converters"
             x:Class="HexClientProject.Views.Rune.RuneEditorView"
             x:DataType="vm:RuneEditorViewModel"
             Width="900" Height="700">

                    <Grid>
                        <!-- Main Editor Panel -->
                        <Border Background="#2B2B2B" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="900" Height="700">
                            <StackPanel Spacing="20">

                                <!-- Header Controls -->
                                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                    <Grid>
                                        <ComboBox x:Name="PageSelector" Width="200" 
                                                  ItemsSource="{Binding RunePages}" 
                                                  SelectedItem="{Binding SelectedPage}"
                                                  DisplayMemberBinding="{Binding PageName}"
                                                  IsVisible="{Binding IsRenaming, Converter={converters:InverseBoolConverter}}"/>
                                        <TextBox x:Name="RenameTextBox" Width="200" 
                                                 Text="{Binding SelectedPage.PageName, Mode=TwoWay}" 
                                                 IsVisible="{Binding IsRenaming}" 
                                                 KeyUp="OnRenameEnter"/>
                                    </Grid>
                                    <Button Content="Rename" Command="{Binding StartRenamingCommand}"/>
                                    <Button Content="+" Command="{Binding AddPageCommand}"/>
                                    <Button Content="-" Command="{Binding DeletePageCommand}"/>
                                    <Button Content="Save" Command="{Binding SavePageCommand}"/>
                                    <Button Content="Close" Command="{Binding CloseEditorCommand}"/>
                                </StackPanel>

                                <Grid ColumnDefinitions="*,20,*" RowDefinitions="Auto">

                    <!-- Primary Tree Column -->
                    <StackPanel Grid.Column="0" Spacing="10">
                        <!-- Tree Selector -->
                        <ItemsControl ItemsSource="{Binding AvailableTrees}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}">
                                        <Image Source="{Binding Icon}" Width="48" Height="48"/>
                                    </ToggleButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Primary Tree Rune Slots -->
                        <ItemsControl ItemsSource="{Binding PrimaryTree.Slots}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Height="120" Margin="0,10">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ItemsControl ItemsSource="{Binding Runes}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="8,0">
                                                            <Image Source="{Binding Icon}" Width="48" Height="48"/>
                                                        </ToggleButton>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock Text="{Binding SelectedRuneDescription}"
                                                   FontSize="12" Height="40" Margin="4,4,4,0"
                                                   Foreground="Gray" TextWrapping="Wrap"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Center"
                                                   IsVisible="{Binding SelectedRune, Converter={StaticResource NullToBoolConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Secondary Tree Column -->
                    <StackPanel Grid.Column="2" Spacing="10">
                        <!-- Tree Selector (excluding primary tree from list) -->
                        <ComboBox Width="200"
                                  ItemsSource="{Binding AvailableSecondaryTrees}" 
                                  SelectedItem="{Binding SecondaryTree}"
                                  DisplayMemberBinding="{Binding Name}" />

                        <!-- Secondary Tree Rune Slots -->
                        <ItemsControl ItemsSource="{Binding SecondaryTree.Slots}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Height="120" Margin="0,10">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ItemsControl ItemsSource="{Binding Runes}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="8,0">
                                                            <Image Source="{Binding Icon}" Width="48" Height="48"/>
                                                        </ToggleButton>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock Text="{Binding SelectedRune.ParsedLongDesc}"
                                                   FontSize="12" Height="40" Margin="4,4,4,0"
                                                   Foreground="Gray" TextWrapping="Wrap"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Center"
                                                   IsVisible="{Binding SelectedRune, Converter={StaticResource NullToBoolConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Stat Perks (kept at bottom of right column) -->
                        <StackPanel Margin="0,20,0,0" Spacing="10" VerticalAlignment="Bottom">
                            <ItemsControl ItemsSource="{Binding StatPerksViewModel.Rows}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                                            <ItemsControl ItemsSource="{Binding}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                      Width="36" Height="36"
                                                                      Margin="4"
                                                                      ToolTip.Tip="{Binding ParsedLongDesc}">
                                                            <Image Source="{Binding Icon}" Width="36" Height="36"/>
                                                        </ToggleButton>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
