<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HexClientProject.Views.MainView"
             x:DataType="viewModels:MainViewModel"
             xmlns:views="clr-namespace:HexClientProject.Views"
             xmlns:viewModels="clr-namespace:HexClientProject.ViewModels">
    
    <Grid ColumnDefinitions="3*,1*">
        <!-- Left Panel (Dynamic) -->
        <ContentControl Grid.Column="0" Content="{Binding LeftPanelContent}"/>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1" Spacing="20" Margin="10">
            <views:SummonerInfoView />
            <views:FriendsListView />
            <views:ChatBoxView VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</UserControl>