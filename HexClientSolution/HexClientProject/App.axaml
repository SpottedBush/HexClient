<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HexClientProject.App"
             xmlns:viewModels="clr-namespace:HexClientProject.ViewModels"
             xmlns:views="clr-namespace:HexClientProject.Views"
             xmlns:converters="clr-namespace:HexClientProject.Converters"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <DataTemplate DataType="{x:Type viewModels:FriendViewModel}">
            <views:FriendView/>
        </DataTemplate>
    </Application.DataTemplates>
     <Application.Resources>
        <x:String x:Key="AutofillIcon">/Assets/roles/autofill_icon.png</x:String>
         <Bitmap x:Key="TopIcon">
             <x:Arguments>
                 <x:String>/Assets/roles/top_icon.png</x:String>
             </x:Arguments>
         </Bitmap>
         <Bitmap x:Key="JglIcon">
             <x:Arguments>
                 <x:String>/Assets/roles/jungle_icon.png</x:String>
             </x:Arguments>
         </Bitmap>
         <Bitmap x:Key="MidIcon">
             <x:Arguments>
                 <x:String>/Assets/roles/mid_icon.png</x:String>
             </x:Arguments>
         </Bitmap>
         <Bitmap x:Key="AdcIcon">
             <x:Arguments>
                 <x:String>/Assets/roles/adc_icon.png</x:String>
             </x:Arguments>
         </Bitmap>
         <Bitmap x:Key="SupportIcon">
             <x:Arguments>
                 <x:String>/Assets/roles/support_icon.png</x:String>
             </x:Arguments>
         </Bitmap>
         <converters:SenderToPaddingConverter x:Key="SenderToPaddingConverter" />
         <converters:ScopeToColorConverter x:Key="ScopeToColorConverter"/>
     </Application.Resources>
             
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>