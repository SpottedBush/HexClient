<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HexClient.ViewModels"
             x:Class="HexClient.Views.GameModeSelectionView">
    <UserControl.DataContext>
        <vm:GameModeSelectionViewModel/>
    </UserControl.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Gamemode selection:" FontSize="16" Margin="0,0,0,10"/>
        <Button Content="Quickplay" Width="200" Height="40"/>
        <Button Content="Ranked solo/duo" Width="200" Height="40"/>
        <Button Content="Ranked flex" Width="200" Height="40"/>
    </StackPanel>
</UserControl>